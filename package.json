  "version": "0.1.2",
  "engines": {
    "node": ">=4",
    "npm": ">=3"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "description": "Novivia localization utilities.",
  "authors": [
    "Mathieu M-Gosselin <mathieumg@novivia.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:Novivia/modules.localization.git"
  },
  "main": "index.js",
  "novivia-builder": {
    "babelPatterns": [
      "config/**/*.js",
      "FrontendLocaleManager.js"
